# Production Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain Configuration
DOMAIN=www.olalaundry.com
BASE_URL=https://www.olalaundry.com

# Database Configuration
DATABASE_URL=postgresql://ola_user:CHANGE_THIS_PASSWORD@localhost:5432/ola_laundry_production

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_32_CHAR_SECRET
CORS_ORIGIN=https://www.olalaundry.com
SECURE_COOKIES=true
TRUST_PROXY=true

# Email/SMTP Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@olalaundry.com
SMTP_PASS=your-smtp-password
SMTP_FROM=OLA Laundry <noreply@olalaundry.com>

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload
UPLOAD_DIR=/var/www/olalaundry/uploads
MAX_FILE_SIZE=10485760

# Redis (Optional - for sessions/caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/olalaundry/app.log

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AI Services (Optional)
AI_SERVICE_URL=https://api.your-ai-service.com
AI_API_KEY=your-ai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100